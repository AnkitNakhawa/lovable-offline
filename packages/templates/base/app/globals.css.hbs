@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
--background: {{theme.colors.background}};
--foreground: {{theme.colors.foreground}};
--primary: {{theme.colors.primary}};
--primary-foreground: {{theme.colors.primary-foreground}};
--secondary: {{theme.colors.secondary}};
--secondary-foreground: {{theme.colors.secondary-foreground}};
--muted: {{theme.colors.muted}};
--muted-foreground: {{theme.colors.muted-foreground}};
--border: {{theme.colors.border}};
--radius: {{theme.radius}};
}

body {
color: var(--foreground);
background: var(--background);
font-family: {{#if theme.font}}{{theme.font}}, sans-serif{{else}}Inter, sans-serif{{/if}};
}

@layer utilities {
.text-balance {
text-wrap: balance;
}
}